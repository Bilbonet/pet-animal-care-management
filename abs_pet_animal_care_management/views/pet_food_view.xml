<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherit Product Form View-->
    <record id="inherited_product_template_only_form_view1" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
	<field name="inherit_id" ref ="product.product_template_only_form_view"/>	
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="after">
                   <field name='is_food'/>
                   <label for="is_food"/>
            </xpath>
        </field> 
    </record>

    <!-- Action for all view--> 
    <record id="action_food" model="ir.actions.act_window">
        <field name="name">Food</field>
        <field name="res_model">product.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_food','=','True')]</field>
        <field name="context">{'is_food':'yes'}</field>
    </record>

    <menuitem id="menu_food"
    name="Food"
    parent="menu_root_pet_animal_care_mangement"
    action='action_food'
    sequence="51"/>
</odoo>
