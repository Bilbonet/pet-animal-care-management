<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Pet Type Tree View--> 
    <record id="open_pet_type_tree_view" model="ir.ui.view">
        <field name="name">pet.type.tree</field>
        <field name="model">pet.type</field>
        <field name="arch" type="xml">
            <tree string="Pet Type">
                <field name='name'/>
            </tree>
        </field>
    </record>

    <!--Pet Type Form View--> 
    <record id="open_pet_type_form_view" model="ir.ui.view">
        <field name="name">pet.type.form</field>
        <field name="model">pet.type</field>
        <field name="arch" type="xml">
            <form string="Pet Type">
                <sheet>  
                    <group>
                        <field name='name' required='True'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for all view--> 
    <record id="action_pet_type" model="ir.actions.act_window">
        <field name="name">Pet Type</field>
        <field name="res_model">pet.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="open_pet_type_tree_view" />
    </record>

    <menuitem id="menu_configuration"
    name="Configuration"
    parent="menu_root_pet_animal_care_mangement"
    groups="group_pet_care_manager"
    sequence="91"/>

    <menuitem id="menu_pet_type"
    name="Pet Type"
    parent="menu_configuration"
    action='action_pet_type'
    sequence="92"/>
</odoo>
