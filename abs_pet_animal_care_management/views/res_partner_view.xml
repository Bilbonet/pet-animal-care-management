<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Res Partner Form-->
    <record id="inherited_sale_view_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
	<field name="inherit_id" ref = "base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr ="//field[@name='website']" position="after">
                <field name ="birth_date" required='True'/>
                <field name ="gender" required='True'/>
            </xpath>
            <xpath expr="//sheet//notebook//page[1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet//notebook//page[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <notebook>
                <page string='Pets'>
                    <field name='pet_ids' readonly='True'/>
                </page>
                <page string='Pet Boarding History'>
                    <field name='pet_boarding_ids' readonly='True'/>
                </page>
                <page string='Pet Day Care History'>
                    <field name='pet_day_care_ids' readonly='True'/>
                </page>
                <page string='Pet Service History'>
                    <field name='pet_service_ids' readonly='True'/>
                </page>
            </notebook> 
        </field>
    </record>

    <!-- Action for all view--> 
    <record id="action_client_information" model="ir.actions.act_window">
        <field name="name">Client</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
    </record>

    <menuitem id="menu_root_pet_animal_care_mangement"
    name="Pet Animal Care Management"
    web_icon="abs_pet_animal_care_management,static/description/icon.png"
    groups='group_pet_care_user,group_pet_care_manager'
    sequence="1"/>

    <menuitem id="child_menu_root_client_resources"
    name="Client Resources"
    parent="menu_root_pet_animal_care_mangement"
    sequence="2"/>

    <menuitem id="menu_client_information"
    name="Client Information"
    parent="child_menu_root_client_resources"
    action='action_client_information'
    sequence="3"/>

    <menuitem id="menu_report"
    name="Report"
    parent="menu_root_pet_animal_care_mangement"
    groups="group_pet_care_manager"
    sequence="85"/>

    <menuitem id="menu_customer_invoice"
    name="Customer Invoice"
    parent="menu_report"
    action='action_customer_invoice_wizard'
    sequence="86"/>

    <menuitem id="menu_boarding_pet_category_wise"
    name="Boarding Pet Category Wise Report"
    parent="menu_report"
    action='action_boarding_pet_wizard'
    sequence="87"/>

    <menuitem id="menu_day_care_pet_category_wise"
    name="Day Care Pet Category Wise Report"
    parent="menu_report"
    action='action_day_care_pet_wizard'
    sequence="88"/>
</odoo>
