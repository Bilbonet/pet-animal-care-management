<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Pet Color Tree View--> 
    <record id="open_pet_color_tree_view" model="ir.ui.view">
        <field name="name">pet.color.tree</field>
        <field name="model">pet.color</field>
        <field name="arch" type="xml">
            <tree string="Pet Color">
                <field name='name'/>
            </tree>
        </field>
    </record>

    <!--Pet Color Form View--> 
    <record id="open_pet_color_form_view" model="ir.ui.view">
        <field name="name">pet.color.form</field>
        <field name="model">pet.color</field>
        <field name="arch" type="xml">
            <form string="Pet Color">
                <sheet>  
                    <group>
                        <field name='name' required='True'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for all view--> 
    <record id="action_pet_color" model="ir.actions.act_window">
        <field name="name">Pet Color</field>
        <field name="res_model">pet.color</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="open_pet_color_tree_view" />
    </record>

    <menuitem id="menu_pet_color"
    name="Pet Color"
    parent="menu_configuration"
    action='action_pet_color'
    sequence="95"/>
</odoo>
