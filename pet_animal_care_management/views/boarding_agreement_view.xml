<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <!--Sequence number-->
    <record id="pet_boarding_seq_number" model="ir.sequence">
        <field name="name">Pet Boarding Number</field>
        <field name="code">boarding.agreement</field>
        <field name="prefix">BOA/%(year)s/</field>
        <field name="padding">4</field>
        <field name="implementation">no_gap</field>
    </record>
    <!--Boarding Agreement Tree View--> 
    <record id="open_boarding_agreement_tree_view" model="ir.ui.view">
        <field name="name">boarding.agreement.tree</field>
        <field name="model">boarding.agreement</field>
        <field name="arch" type="xml">
            <tree string="Boarding Agreement">
                <field name='number'/>
                <field name='partner_id'/>
                <field name='drop_off_date'/>
                <field name='pick_up_date'/>
                <field name='state'/>
            </tree>
        </field>
    </record>

    <!--Boarding Agreement Form View--> 
    <record id="open_boarding_agreement_form_view" model="ir.ui.view">
        <field name="name">boarding.agreement.form</field>
        <field name="model">boarding.agreement</field>
        <field name="arch" type="xml">
            <form string="Boarding Agreement">
                <header>
                    <button string='Create Invoice'
                            name="%(open_invoice_show_wizard_action)d" 
                            type="action" state="invoiced" 
                            class='btn-primary' 
                            attrs="{'invisible': [('state', 'in', ('draft','request','rejected','cancel','invoiced','done'))]}"
                            groups='abs_pet_animal_care_management.group_pet_care_manager'/>
                    <button string='Done' 
                            name="action_done" 
                            type='object' state="done" 
                            class='btn-primary' 
                            attrs="{'invisible': [('state', 'in', ('draft','approved','done','request','rejected','cancel'))]}"/>
                    <button name="back_to_draft" 
                            string="Reset To Draft" 
                            type="object" 
                            attrs="{'invisible': [('state', 'in', ('request','approved','draft','rejected','invoiced','done'))]}"/> 
                    <button name="boarding_request" 
                            string="Submit" type="object" 
                            state="request"  
                            class='oe_highlight' 
                            attrs="{'invisible': [('state', 'in', ('request','approved','rejected','cancel','invoiced','done'))]}"/> 
                    <button name="approve_request" 
                            string="Approved" 
                            type="object" 
                            state="approved" 
                            class='oe_highlight' 
                            attrs="{'invisible': [('state', 'in',('draft','approved','cancel','rejected','invoiced','done'))]}"
                            groups='abs_pet_animal_care_management.group_pet_care_manager'/>
                    <button name="reject_request" 
                            string="Rejected" 
                            type="object" 
                            state="rejected" 
                            class='oe_highlight' 
                            attrs="{'invisible': [('state', 'in', ('draft','approved','rejected','cancel','invoiced','done'))]}"
                            groups='abs_pet_animal_care_management.group_pet_care_manager'/>
                    <button name="cancel_request" 
                            string="Discard" 
                            type="object" 
                            state="cancel" 
                            class='oe_highlight' 
                            attrs="{'invisible': [('state', 'in', ('approved','cancel','request','rejected','invoiced','done'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,request,approved"/> 
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" 
                         attrs="{'invisible': [('state', 'in', ('draft','approved','request','rejected','cancel'))]}">
                        <button type="object" class="oe_stat_button" id="invoice_button" icon="fa-pencil-square-o" name="action_invoice">
                            <div class="o_form_field o_stat_info">
                                <field name="invoice_count"/>
                                <span class="o_stat_text">Invoices</span>
                            </div>
                        </button>
                    </div>
                    <h1><field name='number'/></h1> 
                    <group>
                        <group>
                            <field name='drop_off_date' required='True'/>
                            <field name='pet_boarding_id' required = 'True' widget='selection'/>

                            <field name='charges_type' attrs="{'invisible':[('pet_boarding_id','=',False)],
                                                               'required':[('pet_boarding_id','!=',False)]}"/>

                            <label for="per_hour" attrs="{'invisible': ['|',('charges_type', '=', False),
                                                                            ('charges_type', '!=', 'hours')]}"/>
                            <div class="o_row" attrs="{'invisible': ['|',('charges_type', '=', False),
                                                                         ('charges_type', '!=', 'hours')]}">
                                <field name='per_hour' widget='monetary'/><span>Hours</span>
                            </div>
                            <label for="per_day" attrs="{'invisible': ['|',('charges_type', '=', False),
                                                                           ('charges_type', '!=', 'day')]}"/>
                            <div class="o_row" attrs="{'invisible': ['|',('charges_type', '=', False),
                                                                         ('charges_type', '!=', 'day')]}">
                                <field name='per_day' widget='monetary'/><span>Day</span>
                            </div>
                        </group>
                        <group>
                            <field name='pick_up_date' required='True'/>
                            <field name='total_days' attrs="{'invisible': ['|',('charges_type', '=', False),
                                                                               ('charges_type', '!=', 'day')]}"/>
                            <field name='total_hours' attrs="{'invisible': ['|',('charges_type', '=', False),
                                                                                ('charges_type', '!=', 'hours')]}"/>
                            <field name='total_amount'/>
                        </group>
                    </group>    
                    <separator string='Pets Boarding'/>
                        <field name='boarding_pet_ids'>
                            <tree editable='bottom'>
                                <field name='pet_sequence_id' required='True'/>
                                <field name='pet_id'/>
                                <field name='pet_type_id'/>
                                <field name='pet_sub_type_id'/>
                                <field name='pet_color_id'/>
                                <field name='veterinarian_id'/>
                            </tree>
                        </field>
                    <group string='Emergency Contact Inforamtion'>
                        <group>
                            <field name='partner_id' required='True'/>
                            <field name='mobile' widget='mobile'/>
                        </group>
                        <group>
                            <field name='email' widget='email'/>
                        </group> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for all view--> 
    <record id="action_boarding_agreement" model="ir.actions.act_window">
        <field name="name">Boarding Agreement</field>
        <field name="res_model">boarding.agreement</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="open_boarding_agreement_tree_view" />
    </record>

    <menuitem id="menu_boarding_agreement"
    name="Boarding Agreement"
    parent="child_menu_root_client_resources"
    action='action_boarding_agreement'
    sequence="5"/>
</odoo>
