<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <!--Sequence number-->
    <record id="pet_day_care_seq_number" model="ir.sequence">
        <field name="name">Pet Boarding Number</field>
        <field name="code">pet.day_care</field>
        <field name="prefix">DC/%(year)s/</field>
        <field name="padding">4</field>
        <field name="implementation">no_gap</field>
    </record>
    <!--Day Care Tree View--> 
    <record id="open_day_care_tree_view" model="ir.ui.view">
        <field name="name">pet.day_care.tree</field>
        <field name="model">pet.day_care</field>
        <field name="arch" type="xml">
            <tree string="Day Care Reservation From">
                <field name='number'/>
                <field name='partner_id'/>
                <field name='drop_off_date'/>
                <field name='pick_up_date'/>
                <field name='state'/>
            </tree>
        </field>
    </record>

    <!--Day Care Form View--> 
    <record id="open_day_care_form_view" model="ir.ui.view">
        <field name="name">pet.day_care.form</field>
        <field name="model">pet.day_care</field>
        <field name="arch" type="xml">
            <form string="Day Care Reservation From">
                <header>
                    <button string='Create Invoice'
                            name="%(open_day_care_invoice_show_wizard_action)d" 
                            type="action" state="invoiced" 
                            class='btn-primary' 
                            attrs="{'invisible': [('state', 'in', ('draft','request','rejected','cancel','invoiced','done'))]}"
                            groups='abs_pet_animal_care_management.group_pet_care_manager'/>
                    <button string='Done' 
                            name="action_done" 
                            type='object' state="done" 
                            class='btn-primary' 
                            attrs="{'invisible': [('state', 'in', ('draft','approved','done','request','rejected','cancel'))]}"/>
                    <button name="back_to_draft" 
                            string="Reset To Draft" 
                            type="object" 
                            attrs="{'invisible': [('state', 'in', ('request','approved','draft','rejected','invoiced','done'))]}"/> 
                    <button name="day_care_request" 
                            string="Submit" type="object" 
                            state="request"  
                            class='oe_highlight' 
                            attrs="{'invisible': [('state', 'in', ('request','approved','rejected','cancel','invoiced','done'))]}"/> 
                    <button name="approve_request" 
                            string="Approved" 
                            type="object" 
                            state="approved" 
                            class='oe_highlight' 
                            attrs="{'invisible': [('state', 'in',('draft','approved','cancel','rejected','invoiced','done'))]}"
                            groups='abs_pet_animal_care_management.group_pet_care_manager'/>
                    <button name="reject_request" 
                            string="Rejected" 
                            type="object" 
                            state="rejected" 
                            class='oe_highlight' 
                            attrs="{'invisible': [('state', 'in', ('draft','approved','rejected','cancel','invoiced','done'))]}"
                            groups='abs_pet_animal_care_management.group_pet_care_manager'/>
                    <button name="cancel_request" 
                            string="Discard" 
                            type="object" 
                            state="cancel" 
                            class='oe_highlight' 
                            attrs="{'invisible': [('state', 'in', ('approved','cancel','request','rejected','invoiced','done'))]}"
                            groups='abs_pet_animal_care_management.group_pet_care_manager'/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,request,approved"/> 
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" 
                         attrs="{'invisible': [('state', 'in', ('draft','approved','request','rejected','cancel'))]}">
                        <button type="object" class="oe_stat_button" id="invoice_button" icon="fa-pencil-square-o" name="action_invoice">
                            <div class="o_form_field o_stat_info">
                                <field name="invoice_count"/>
                                <span class="o_stat_text">Invoices</span>
                            </div>
                        </button>
                    </div>
                    <h1><field name='number'/></h1> 
                    <group>
                        <group>
                            <field name='partner_id' required='True'/>
                            <field name='email' widget='email'/>
                        </group>
                        <group>
                            <field name='mobile' widget='mobile'/>
                        </group>
                    </group>
                    <separator string = "Location Information"/>
                    <group>
                        <group>
                            <field name='drop_off_date' required='True'/>
                            <field name='location_id' required = 'True'  widget='selection'/>
                            <label for="amount"/>
                            <div class="o_row">
                                <field name='amount' widget='monetary'/><span>Day</span>
                            </div>
                        </group>
                        <group>
                            <field name='pick_up_date' required='True'/>
                            <field name='total_days'/>
                            <field name='total_amount'/>
                        </group>
                    </group>
                    <separator string='Day Care'/>
                        <field name='day_care_pet_ids'>
                            <tree editable='bottom'>
                                <field name='pet_day_sequence_id' required='True'/>
                                <field name='pet_id'/>
                                <field name='pet_type_id'/>
                                <field name='pet_sub_type_id'/>
                                <field name='pet_color_id'/>
                                <field name='veterinarian_id'/>
                            </tree>
                        </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for all view--> 
    <record id="action_day_care" model="ir.actions.act_window">
        <field name="name">Day Care Reservation From</field>
        <field name="res_model">pet.day_care</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="open_day_care_tree_view"/>
    </record>

    <menuitem id="menu_day_care"
    name="Day Care Reservation"
    parent="child_menu_root_client_resources"
    action='action_day_care'
    sequence="6"/>
</odoo>
