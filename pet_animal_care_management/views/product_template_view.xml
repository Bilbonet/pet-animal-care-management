<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherit Product Form View-->
    <record id="inherited_product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
	<field name="inherit_id" ref ="product.product_template_only_form_view"/>	
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="after">
                   <field name='is_service'/>
                   <label for="is_service"/>
            </xpath>
        </field> 
    </record>

    <!-- Action for all view--> 
    <record id="action_service" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">product.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_service','=','True')]</field>
        <field name="context">{'is_service':'yes'}</field>
    </record>

    <menuitem id="menu_services"
    name="Services"
    parent="menu_root_pet_animal_care_mangement"
    sequence="61"/>

    <menuitem id="menu_service"
    name="Service"
    parent="menu_services"
    action='action_service'
    sequence="62"/>
</odoo>
