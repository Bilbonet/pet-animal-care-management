<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Pet Boarding Tree View--> 
    <record id="open_pet_boarding_tree_view" model="ir.ui.view">
        <field name="name">pet.boarding.tree</field>
        <field name="model">pet.boarding</field>
        <field name="arch" type="xml">
            <tree string="Pet Boarding">
                <field name='name'/>
                <field name='per_hour'/>
                <field name='per_day'/>
            </tree>
        </field>
    </record>

    <!--Pet Boarding Form View--> 
    <record id="open_pet_boarding_form_view" model="ir.ui.view">
        <field name="name">pet.boarding.form</field>
        <field name="model">pet.boarding</field>
        <field name="arch" type="xml">
            <form string="Pet Boarding">
                <sheet>  
                    <group>
                        <field name='name' required='True'/>
                            <label for="per_hour"/>
                            <div class="o_row">
                                <field name='per_hour' widget='monetary' required='True'/><span>Hours</span>
                            </div>
                            <label for="per_day"/>
                            <div class="o_row">
                                <field name='per_day' widget='monetary' required='True'/><span>Day</span>
                            </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for all view--> 
    <record id="action_pet_boarding" model="ir.actions.act_window">
        <field name="name">Pet Boarding</field>
        <field name="res_model">pet.boarding</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="open_pet_boarding_tree_view" />
    </record>

    <menuitem id="menu_pet_boarding"
    name="Pet Boarding"
    parent="menu_configuration"
    action='action_pet_boarding'
    sequence="96"/>
</odoo>
