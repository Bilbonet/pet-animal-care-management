<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Location Information Tree View--> 
    <record id="open_location_information_tree_view" model="ir.ui.view">
        <field name="name">location.information.tree</field>
        <field name="model">location.information</field>
        <field name="arch" type="xml">
            <tree string="Location Information">
                <field name='name'/>
                <field name='mobile'/>
                <field name='email'/>
            </tree>
        </field>
    </record>

    <!--Location Information Form View--> 
    <record id="open_location_information_form_view" model="ir.ui.view">
        <field name="name">location.information.form</field>
        <field name="model">location.information</field>
        <field name="arch" type="xml">
            <form string="Location Information">
                <sheet>  
                    <group>
                        <group>
                            <field name='name' required='True'/>
                            <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" 
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                </div>
                            <field name='email' widget='email'/>
                        </group>
                        <group>
                            <field name='mobile' widget='phone' required='True'/>
                            <label for="amount"/>
                            <div class="o_row">
                                <field name='amount' widget='monetary'/><span>Day</span>
                            </div>
                            <field name='capacity'/>
                            <field name='total_pet' groups='abs_pet_animal_care_management.group_pet_care_manager'/>
                        </group>
                    </group>
                    <notebook groups='abs_pet_animal_care_management.group_pet_care_manager'>
                        <page string='Pets'>
                            <field name='day_care_pet_ids' readonly='True'/>
                        </page> 
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for all view--> 
    <record id="action_location_information" model="ir.actions.act_window">
        <field name="name">Location Information</field>
        <field name="res_model">location.information</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="open_location_information_tree_view" />
    </record>

    <menuitem id="menu_contact_us"
    name="Contact Us"
    parent="menu_root_pet_animal_care_mangement"
    sequence="81"/>

    <menuitem id="menu_location_information"
    name="Location Information"
    parent="menu_contact_us"
    action='action_location_information'
    sequence="82"/>
</odoo>
