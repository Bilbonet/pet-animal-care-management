<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--add fields in Wizard form-->
    <record id="view_invoice_show_wizard_action" model="ir.ui.view">
        <field name="name">create.invoice.form</field>
        <field name="model">create.invoice</field>
        <field name="arch" type="xml">
            <form>
                <group>
	            <group>
                        <field name="boarding_id" readonly='True'/> 
                        <field name="partner_id" readonly='True'/> 
                        <field name="boarding_ids" widget = 'many2many_tags' readonly='True'/>
	            </group>
                    <group>
                        <field name="total_pets"/>
                        <field name="total_amount" readonly='True' invisible='True'/>
                        <field name="main_amount"/> 
                    </group>
	        </group>
	    	<footer>
	            <button string='Create' name="create_invoice" type='object' class='btn-primary'/>
		    <button string='Cancel' class='btn-default' special="cancel"/>	
	    	</footer>
	    </form>		
        </field>
    </record>

    <!-- Action For Wizard Form-->
    <record id="open_invoice_show_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Invoice</field>
        <field name="res_model">create.invoice</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_invoice_show_wizard_action"/>	
    </record>
</odoo>
